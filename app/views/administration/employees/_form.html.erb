<%= form_for(@employee, url: administration_employee_path) do |f| %>
 

    <div class="row">
      <div class="form-group">
        <div class="col-md-6">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: "form-control input-lg" %>
        </div>
        <div class="col-md-6">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "form-control input-lg" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="col-md-3">
          <%#= f.label :birthday %>
          <%#= f.date_select :birthday, { :start_year => Time.now.year - 21, :end_year => Time.now.year - 100, :prompt => true }, class: "form-control input-lg" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="col-md-3">
          <%= f.label :city %>
          <%= f.text_field :city, class: "form-control input-lg" %>
        </div>
        <div class="col-md-3">
          <%= f.label :province %>
          <%= f.text_field :province, class: "form-control input-lg" %>
        </div>
        <div class="col-md-3">
          <%#= f.label :country %>
          <%#= f.country_select :country, { priority: %w(UA RU),  :prompt => true }, class: "form-control input-lg" %>
        </div>
      </div>
    </div>

    <hr>
    
    <div class="row">
      <div class="form-group">
        <div class="col-md-6">
          <%#= f.label :mobile %>
          <%#= f.text_field :mobile, class: "form-control input-lg" %>
        </div>
        <div class="col-md-6">
          <%#= f.label :landline %>
          <%#= f.text_field :landline, class: "form-control input-lg" %>
        </div>
      </div>
    </div>
  
    <div class="row">
      <div class="form-group">
        <div class="col-md-6">
          <%= f.select :role_id, options_for_select(Role.all.collect{ |r| [r.name, r.id] }) %>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.submit "Submit", class: "btn btn-success" %>
      </div>
    </div>
    <% end %>